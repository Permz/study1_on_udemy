
<div class="card container my-5 shadow-lg" style="width: 30rem;">
  <div class="card-header">
    <h4 class="text-center card-title"><%= @article.title %></h4>
  </div>
  <div class="card-body">
    <p class="card-text"><%= @article.description %></p>
    <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-outline-success" %>
    <%= link_to 'Delete', article_path(@article), method: :delete, data: { confirm: "are you sure?"} class: "btn btn-outline-info" %>
  </div>
  <div class="card-footer text-muted">
    <small>created <%= time_ago_in_words(@article.created_at) %> ago, edited <%= time_ago_in_words(@article.updated_at) %> ago</small>
  </div>
</div>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @article.description %>
</p>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
